/* pages/invite/invite.wxss */
.topbg{
  width: 750rpx;
  height: 425rpx;
  background: url('https://img-dmallovo.oss-cn-shenzhen.aliyuncs.com/yx_applet/images/img_sy_02.png') no-repeat left top;
  overflow: hidden;
  background-size: 100%;
  position: relative;
}

.topbg .grade{
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  margin-top: 20rpx;
  vertical-align: middle;
}
.topbg .big{
  font-size: 92rpx;
}
.topbg .mine_diamond{
  color: #fff;
  font-size: 30rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 150rpx
}
.user_logo{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #fff;
  position: absolute;
  top: 230rpx;
  left: 50%;
  transform: translateX(-50%);
}
.user_logo image{
  width: 91%;
  height: 91%;
  border-radius: 50%;
  display: block;
  margin: 0 auto;
  margin-top: 9rpx;
}
.mine_invite{
  font-size: 26rpx;
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.mine_invite .title{
  margin: 0 48rpx;
}
.mine_invite .line{
  width: 31%;
  height: 1rpx;
  background: #eee;
}
.invite_list{
  height: 84rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 32rpx;
}
.invite_list image{
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
  margin-right: 31rpx;
}
.activity_detail{
  width: 100%;
  height: auto;
  padding: 0 80rpx;
  box-sizing: border-box;
}
.activity_detail .title{
  font-size: 42rpx;
  color: #000;
  text-align: center;
  margin-top: 66rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
}
.detail{
  margin-top: 26rpx;
  font-size: 26rpx;
  display: flex;
  justify-items: center;
}
.buttonBox{
  width: 100%;
  height: 110rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.invite_btn{
  width:40%;
  height:90rpx;
  background:#fff;
  border-radius:45rpx;
  box-shadow:5px 0px 20px rgba(11,40,163,0.1);
  line-height: 90rpx;
  font-size: 34rpx;
  text-align: center;
  color: #000;
  display: inline-block;
  margin-right: 20rpx;
}
button.bg{
  background:linear-gradient(-60deg,rgba(11,40,163,1) 0%,rgba(0,26,136,1) 100%);
  box-shadow:10px 0px 20px rgba(11,40,163,0.2); 
  color: #fff;
  margin: 0;
}
.changeTitle{
  font-size: 42rpx;
  color: #333;
  font-weight: bold;
  display: block;
  text-align: center;
  margin-top: 83rpx;
  padding-bottom: 33rpx;
}
/* 兑换专区 */
.changeImg{
  width: 94%;
  display: block;
  margin: 0 auto;
  border-radius: 10rpx;
}
/* 冻结状态 */
.freezeBg{
  background: url('https://img-dmallovo.oss-cn-shenzhen.aliyuncs.com/yx_applet/images/img_sy_03.png') no-repeat left top;
  background-size: 100%;
}
.tip{
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  background: url('http://img-dmallovo.oss-cn-shenzhen.aliyuncs.com/yx_applet/invite/btn_sy_02.png') no-repeat left top;
  background-size: 100%;
  right: -20rpx;
  top:50%; 
  transform: translateY(-43%);
}
/* 无邀请 */
.inviteNone{
font-size:26rpx;
font-family:PingFang-SC-Regular;
font-weight:400;
color:rgba(245,40,73,1);
}
/* 邀请码 */
.inviteCode{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(0,0,0,.7);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.invite_code{
  width: 664rpx;
  height: 910rpx;
  margin: 0 auto; 
}
.saveInviteImage{
  width:500rpx;
  height:90rpx;
  background:linear-gradient(-60deg,rgba(11,40,163,1) 0%,rgba(0,26,136,1) 100%);
  border-radius:45rpx;
  box-shadow:10rpx 0rpx 2r0px rgba(11,40,163,0.2);
  font-size:30rpx;
  font-family:PingFang-SC-Regular;
  color:rgba(255,255,255,1);
  text-align: center;
  line-height: 90rpx;
  display: blcok;
  margin: 0 auto;
}