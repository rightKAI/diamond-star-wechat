/* pages/star/feedBack/feedBack.wxss */

.container {}

.textarea-wrp {
    width: 100%;
    height: 100%
}

.textarea-wrp {
    height: 300rpx;
    box-sizing: border-box;
    display: inline-block;
    position: relative;
    margin-top: 2rpx;
    background: rgba(255, 255, 255, 1);
}

.textarea-wrp .textarea_text {
    width: 100%;
    height: 100%;
    padding: 39rpx 45rpx 40rpx 29rpx;
    box-sizing: border-box;
    font-size: 30rpx;
    color: #000;
    line-height: 52rpx;
}

.textarea-wrp .numcount {
    position: absolute;
    right: 31rpx;
    bottom: -5rpx;
    font-size: 30rpx;
    color: rgba(191, 191, 191, 1);
    line-height: 52rpx;
}

.submitFeedBack {
    width: 300rpx;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 30rpx;
    margin-top: 61rpx;
    color: rgba(255, 255, 255, 1);
    text-align: center;
    background: linear-gradient(150deg, rgba(11, 40, 163, 1), rgba(0, 26, 136, 1));
    border-radius: 35rpx;
    box-shadow: 10rpx 0rpx 20rpx rgba(11, 40, 163, 0.2);
}