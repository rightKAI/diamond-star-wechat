/* pages/address/address.wxss */
view{
  box-sizing: border-box;
}
.contant{
  width: 100%;
  height:88vh;
  overflow-y: auto;
  padding: 30rpx;
  padding-bottom: 0;
  border-bottom: 1px solid #f5f5f5;
}
.address_card{
  width: 690rpx;
  height: 230rpx;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 52rpx 30rpx;
}
.address_card view:nth-child(1){
  height: 125rpx;
  width: 77%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.address{
  font-size: 26rpx;
  margin-top: 5rpx;
  color: #333;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}
.address text{
  margin-right: 10rpx;
}
.address_card .view_two{
  height: 110rpx;
  width: 15%;
  border-left: 1rpx solid #e8e8e8;
  display: flex;
  align-items: center;
}
.address_card .view_two image{
  width: 30rpx;
  height: auto;
  margin-left: 50rpx;
}
.address_card .title{
  width: 100%;
  font-size: 30rpx;
  color: #333;
  height: auto !important;
  font-weight: bold;
}
.address_card .title .name{
  margin-right: 29rpx;
}
.contant .address_card:nth-child(n+1){
  margin-top: 17rpx;
}
.addBtn{
  position: fixed;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 500rpx;
  height: 90rpx;
  background:linear-gradient(150deg,rgba(11,40,163,1),rgba(0,26,136,1));
  border-radius:45rpx;
  box-shadow:13rpx 0px 27rpx rgba(11,40,163,0.3);
  text-align: center;
  line-height: 90rpx;
  color: #fff;
}
.bottomBox{
  width: 100%;
  height: 13vh;
  border-top: 1px solid #f5f5f5;
  background: #fff;
  position: fixed;
  bottom: 0rpx;
}