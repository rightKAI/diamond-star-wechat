/* pages/intoShop/intoShop.wxss */
.content{
  position: relative;
  height: 100vh;
  width: 100%;
}
.bg{
  width: 100%;
  height: auto;           
}
.title{
  position:absolute;
  top:-34%;
  width:690rpx;
  height:30%;
  left:50%;
  background:#fff;
  border-radius:20rpx;
  transform:translateX(-50%);
  box-shadow:1px 0px 10px rgba(0,26,136,0.2);
}
.appintmentBox{
  width: 690rpx;
  height: 52%;
  background: #fff;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  border-radius:20px 20px 0px 0px;
  box-shadow:0rpx 0rpx 10rpx rgba(0,26,136,0.2);
}
.title .title_Shop{
  font-size: 42rpx;
  text-align: center;
  margin-top: 50rpx;
}
.title .details{
  display: flex;
  justify-content: center;
  align-content: center;
  height: 30rpx;
  margin-top: 10rpx;
}
.title .details view{
  font-size: 26rpx;
  color: #000;
  align-items: center;
}
.icon_01{
  width:26rpx;
  height:26rpx;
  margin-top: 9rpx;
}
.appintmentBox input{
  width: 500rpx;
  height: 118rpx;
  display: block;
  margin: 0 auto;
  border: none;
  border-bottom: 1rpx solid #e8e8e8;
  text-align: center;
  color: #333;
  font-size: 30rpx;
}
.placeholder_input{
  color: #999;
  font-size: 30rpx;
}
.btn{
  width: 500rpx;
  height: 90rpx;
  background: linear-gradient(150deg,rgba(11,40,163,1),rgba(0,26,136,1));
  box-shadow:13rpx 0px 27rpx rgba(11,40,163,0.3);
  border-radius: 45rpx;
  background-size: 100%;
  display: block;
  margin: 0 auto;
  margin-top: 50rpx;
  text-align: center;
  color: #fff;
  line-height: 90rpx;
}
.chooseAnotherOne{
  color: #001A88;
  text-decoration:underline; 
  display: block;
  width: 182rpx;
  font-size: 26rpx;
  margin: 0 auto;
  margin-top: 47rpx;
}