/* pages/shopList/shopList.wxss */
.container_mine{
  width: 100%;
  background: #fff;
}
.nav{
  width: 650rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  display: block;
  margin: 30rpx auto 0 auto;
  border: 1rpx solid #bdbdbd;
  font-size: 26rpx;
}
.content{
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  overflow: hidden;
}
.nav view{
  width: 50%;
  height: 100%;
  float: left;
}

.select{
  background: #001A88;
  color: #fff;
}

.detail{
  text-align: center;
}
.detail view{
  display: block;
  margin: 0 auto;
  width: 690rpx;
  overflow: hidden;/*超出部分隐藏*/
  white-space: nowrap;/*不换行*/
  text-overflow:ellipsis;/*超出部分文字以...显示*/
}
.title{
  font-size: 34rpx;
  color: #333;
  margin-top: 30rpx !important;
}
.action_appointment{
  color: #001A88;
  font-size: 32rpx;
  margin: 25rpx 0;
}
.time_icon{
  width: 23rpx;
  display: inline-block;
  height: 23rpx;
  margin-bottom: 6rpx;
}
.time_str{
  display: flex;
  justify-content: center;
  font-size: 26rpx;
  color: #333;
  margin-top: 20rpx;
}
.time_str view{
  display: inline;
}
.address_detail{
  font-size: 26rpx;
  margin-top: 20rpx !important;
  display: inline-block;
  color: #333;
}
.store_item{
  width: 100%;
  height: 752rpx;
  background: #fff;
  overflow: hidden;
}
.store_item:not(:first-child){
  margin-top: 20rpx;
}
.store_item .shop_img{
  width: 690rpx;
  height: 420rpx;
  margin: 30rpx auto 0 auto;
  display: block;
}
/*弹出层*/
.btnClose image {
  width: 26rpx;
  height: 26rpx;
  display: inline-block;
  margin-top: 40rpx;
}
.btnBox {
  overflow: hidden;
  width: 650rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: rgba(0, 26, 136, 1);
  border-radius: 10rpx;
  color: #fff;
  font-size: 32rpx;
  position: absolute;
  bottom: 20rpx;
  left: 40rpx;
  z-index: 999999;
}
.btnClose {
  height: 108rpx;
  text-align: right;
  border-bottom: solid 1px #e8e8e8;
}
.pol_bg {
  background: rgba(0, 0, 0, 0.8);
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 999999;
}

.cityListBox {
  position: fixed;
  bottom: 0;
  left: 0;
  top: 334rpx;
  right: 0;
  width: 100%;
  background: #fff;
  z-index: 999999;
}

.xian {
  border-bottom: solid 1rpx #e8e8e8;
  padding: 40rpx 0;
}

.cityStore {
  font-size: 32rpx;
  color: #333;
}

.cityStore image {
  width: 30rpx;
}

.cityStore text {
  font-size: 32rpx;
  color: #333;
}

.cityconcen {
  overflow: hidden;
  padding-top: 24rpx;
}

.cityconcen:nth-child(2) {
  padding-top: 0;
}

.pull_header {
  font-size: 32rpx;
  color: #333;
  padding-top: 39rpx;
}

.pull_text text {
  width: 195rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  display: block;
  float: left;
  margin-right: 27rpx;
  border: solid 1rpx #bdbdbd;
  margin-top: 40rpx;
  font-size: 26rpx;
  color: #333;
  border-radius: 4rpx;
}

.pull_text text:nth-child(3n+3) {
  margin-right: 0;
}

.cityText .on {
  background: #001a88;
  color: #fff;
}

