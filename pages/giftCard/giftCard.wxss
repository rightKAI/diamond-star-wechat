/* pages/giftCard/giftCard.wxss */
.content{
  border-top: 1rpx solid #cdcdcd;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  flex-wrap: wrap;
}
.card_item{
  width: 690rpx;
  height: 220rpx;
  display: block;
  position: relative;
  margin-top: 25rpx;
}
.greyCard{
  opacity: .5;
}
.colorRed{
  color: #F52849 !important;
}
.card_item image{
  position: absolute;
  left: 0;
  top: 0;
  width: 690rpx;
  height: 220rpx;
}
.card_right{
  width: 370rpx;
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
  padding-left: 58rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.card_title{
  color: #000;
  font-size: 32rpx;
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  display: block;
  font-weight: bold;
  padding-right: 14rpx;
  box-sizing: border-box;
}
.card_detail{
  font-size: 24rpx;
  display: block;
  color: #000;
  margin-top: 12rpx;
}
.use_btn{
  width:180rpx;
  height:60rpx;
  background:rgba(0,26,136,1);
  border-radius:30rpx;
  color: #fff;
  font-size: 26rpx;
  line-height: 60rpx;
  margin-top: 14rpx;
  text-align: center;
  letter-spacing: 2rpx;
}
.greyBtn{
  background:#F6F8FE;
  color: #bfbfbf;
}
