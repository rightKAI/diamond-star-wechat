/* pages/member/member.wxss */
view{
  box-sizing: border-box;
}
.my-integral{
  width: 710rpx;
  height:300rpx;
  background: url('http://img-dmallovo.oss-cn-shenzhen.aliyuncs.com/yx_applet/images/img_hyqy_01.png') no-repeat;
  background-size: 100%;
  background-color: #fff;
  margin: 0 auto;
  margin-top: 60rpx;
  display: flex;
  justify-content: center;
  position: relative;
  align-items: center;
}
.line_zw{
  width: 2rpx;
  height: 75rpx;
  margin: 0 74rpx ;
}
.line{
  width: 2rpx;
  height: 90rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  background: #EFBCB8;
}
.my-integral .titletwo{
  display: block;
  text-align: center;
  color: #000;
  font-size: 24rpx;
  letter-spacing: 2rpx;
  margin-top: -18rpx;
  border-bottom: 1rpx solid #000;
}
.leftInfo{
  padding-bottom: 20rpx;
}
.my-integral .integral{
  font-size: 62rpx;
  width: auto;
  text-align: center;
}
.borderTop{
  width: 100%;
  border-top: 1rpx solid #f5f5f5;
}
.activity-page{
  margin-top: 30rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  padding: 0 30rpx;
}
.activity-page view{
  height: 280rpx;
  width: 330rpx;
}
.activity-page text{
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #333;
  margin-top: 10rpx;
}
.activity-page view image{
  width: 330rpx;
  height: 210rpx;
}
.blank{
  width: 100%;
  height: 20rpx;
  background: #F6F8FE;
}

.DiamondChange{
  padding-bottom: 32rpx;
  border-bottom: 1px solid #f5f5f5;
}
.DiamondChange .title{
  font-size: 46rpx;
  color: #333333;
  line-height: 150rpx;
  padding-left: 30rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  display: block;
  text-align: center;
}
.DiamondChange image{
  width: 94%;
  display: block;
  margin: 0 auto;
  border-radius: 10rpx;
}