/* pages/member/myIntegral/myIntegral.wxss */

.container {
    width: 100%;
    min-height: 100vh;
    border-top: 1rpx solid #dcdcdd;
}

.content-top {
    width: 690rpx;
    height: 269rpx;
    background: rgba(255, 255, 255, 1);
    border: 1rpx solid #fff;
    border-radius: 10rpx;
    margin: 30rpx auto 20rpx auto;
    position: relative;
    box-shadow: 2rpx 0rpx 10rpx rgba(105, 114, 227, 0.1);
}

.content-top .viewRule {
    position: absolute;
    top: 29rpx;
    right: 29rpx;
    text-decoration: underline;
    font-size: 26rpx;
    color: rgba(0, 0, 0, 1);
}

.content-top .center {
    height: 83rpx;
    margin: 93rpx auto;
    text-align: center;
}

.content-top .center image {
    display: inline-block;
    width: 82rpx;
    height: 83rpx;
    vertical-align: text-bottom;
}

.content-top .center .grade {
    display: inline-block;
    font-size: 72rpx;
    margin-left: 29rpx;
    color: rgba(0, 0, 0, 1);
}

.content-top .center .fen {
    font-size: 30rpx;
    margin-left: 9rpx;
    color: rgba(0, 0, 0, 1);
}

.content-bottom {
    width: 690rpx;
    height: 800rpx;
    background: rgba(255, 255, 255, 1);
    border: 1rpx solid #fff;
    border-radius: 10rpx;
    margin: 0 auto;
    position: relative;
    text-align: center;
    box-sizing: border-box;
    overflow-y: auto;
    box-shadow: 2rpx 0rpx 10rpx rgba(105, 114, 227, 0.1);
}

.content-bottom .detailList {
    height: 40rpx;
    line-height: 40rpx;
    text-align: left;
    margin: 74rpx auto 0rpx auto;
    box-sizing: border-box;
    position: relative;
    padding: 0rpx 100rpx 0rpx 110rpx;
}

.content-bottom .detailList:first-child {
    margin-top: 69rpx;
}

.content-bottom .detailList .dot {
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    line-height: 20rpx;
    background-color: #001A88;
    border-radius: 50%;
    margin-right: 23rpx;
    opacity: 0.5;
}

.content-bottom .detailList .line {
    width: 1rpx;
    height: 60rpx;
    background: #dcdcdd;
    position: absolute;
    bottom: -69rpx;
    left: 118rpx;
}

.content-bottom .detailList .registerFree {
    font-size: 26rpx;
    color: rgba(0, 0, 0, 1);
    margin-right: 16rpx;
}

.content-bottom .detailList .add {
    font-size: 30rpx;
    margin-right: 120rpx;
    color: rgba(0, 0, 0, 1);
}

.content-bottom .detailList .dataBox {
    width: 141rpx;
    display: inline-block;
    float: right;
}

.content-bottom .detailList .data {
    display: inline-block;
    font-size: 24rpx;
    line-height: 24rpx;
    color: rgba(153, 153, 153, 1);
}

.detailList:last-child:last-child .line {
    display: none;
}

/* 弹窗 */

.container .rulesDetail {
    width: 100%;
    height: 100%;
    top: 0px;
    left: 0;
    position: absolute;
    overflow: hidden;
    background: rgba(0, 0, 0, .7);
}

.container .rulesDetail .detail {
    width:600rpx;
    height:700rpx;
    text-align:center;
    display: block;
    background:rgba(255, 255, 255, 1);
    border:1rpx solid #dcdcdd;
    border-radius:10rpx;
    padding-bottom: 60rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-60%)
}

.rulesDetail .detail .detailTop {
    font-size: 36rpx;
    display: inline-block;
    font-weight: 500;
    margin: 61rpx auto 23rpx auto;
    color: rgba(0, 0, 0, 1);
}

.rulesDetail .detail .detailBox {
    font-size: 26rpx;
    text-align: left;
    margin: 0 50rpx;
    font-weight: 400;
    color: rgba(0, 0, 0, 1);
    margin-top: 26rpx;
    display: flex;
    justify-items: center;
}

.rulesDetail  .detailBtn {
    width: 300rpx;
    height: 70rpx;
    background: linear-gradient(-60deg, rgba(11, 40, 163, 1) 0%, rgba(0, 26, 136, 1) 100%);
    border-radius: 35rpx;
    line-height: 70rpx;
    color: rgba(255, 255, 255, 1);
    box-shadow: 10rpx 0rpx 20rpx rgba(11, 40, 163, 0.2);
    margin: 0 auto;
    margin-top: 20rpx;
}
.bottom_area{
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom: 0;
}
.text_detail{
  height: 450rpx;
  width: 100%;
  overflow-y: scroll;
  padding-bottom: 60rpx;
}
