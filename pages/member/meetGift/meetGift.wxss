/* 预约 */

.content>image {
    width: 100%;
    height: 756rpx;
}

.content {
    position: relative;
    height: 100vh;
    width: 100%;
}

.title {
    position: absolute;
    top: 356rpx;
    width: 690rpx;
    height: 200rpx;
    left: 50%;
    background: #fff;
    border-radius: 20rpx;
    transform: translateX(-50%);
    box-shadow: 1px 0px 10px rgba(0, 26, 136, 0.2);
}

.appintmentBox {
    width: 690rpx;
    height: 630rpx;
    background: #fff;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 20px 20px 0px 0px;
    box-shadow: 1px 0px 10px rgba(0, 26, 136, 0.2);
}

.title .title_Shop {
    font-size: 42rpx;
    text-align: center;
    margin-top: 50rpx;
}

.title .details{
  display: flex;
  justify-content: center;
  align-content: center;
  height: 30rpx;
  margin-top: 10rpx;
}
.title .details view{
  font-size: 26rpx;
  color: #000;
  align-items: center;
}
.icon_01{
  width:26rpx;
  height:26rpx;
  margin-top: 9rpx;
}

.appintmentBox input,
.appintmentBox picker {
    width: 500rpx;
    height: 118rpx;
    display: block;
    margin: 0 auto;
    border: none;
    border-bottom: 1rpx solid #e8e8e8;
    text-align: center;
    color: #333;
    font-size: 30rpx;
}

.appintmentBox picker .picker {
    width: 100%;
    height: 100%;
    line-height: 118rpx;
    color: rgba(191, 191, 191, 1);
}

.placeholder_input {
    color: #999;
    font-size: 30rpx;
}

.btn {
    width: 500rpx;
    height: 90rpx;
    background: linear-gradient(150deg, rgba(11, 40, 163, 1), rgba(0, 26, 136, 1));
    box-shadow: 13rpx 0px 27rpx rgba(11, 40, 163, 0.3);
    border-radius: 45rpx;
    background-size: 100%;
    display: block;
    margin: 0 auto;
    margin-top: 50rpx;
    text-align: center;
    color: #fff;
    line-height: 90rpx;
}

.chooseAnotherOne {
    color: #001A88;
    text-decoration: underline;
    display: block;
    width: 182rpx;
    font-size: 26rpx;
    margin: 0 auto;
    margin-top: 47rpx;
}

.container .secondPage .txt {
    position: absolute;
    top: 32rpx;
}

.container .secondPage .txt .secondText {
    font-size: 36rpx;
    display: inline-block;
    color: rgba(51, 51, 51, 1);
    line-height: 52rpx;
}

.container .thirdPage {
    position: relative;
    text-align: center
}

.container .thirdPage .txt {
    position: absolute;
