/* pages/myLover/love/love.wxss */
.loverCard{
  width: 100%;
  height: 440rpx;
  background: url('http://img-dmallovo.oss-cn-shenzhen.aliyuncs.com/yx_applet/lover/img_sy_05.png') no-repeat left top;
  background-size: 100%;
  position: relative;
}
.cardInfo{
  width: auto;
  height: 150rpx;
  position: absolute;
  top: 130rpx;
  left: 78rpx;
  font-size:  24rpx;
}
.lover_name{
  font-size: 32rpx;
  color: #000;
  font-weight: bold;
}
.line{
  width: 60rpx;
  height: 2rpx;
  background: #000;
  margin: 30rpx 0 26rpx 0;
}
.untie{
  font-size: 24rpx;
  color: #999;
  margin-top: 45rpx;
}
.activity{
  width: 690rpx;
  height: 550rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.activity .activity_card{
  height: 254rpx;
  width: 333rpx;
  text-align: center;
  font-size: 26rpx;
  color: #333;
}
.activity .activity_card:nth-child(n+3){
  margin-top: 20rpx;
}
.activity_card image{
  width: 333rpx;
  height: 212rpx;
  padding-bottom: 10rpx;
}
.btn{
  width:500rpx;
  height:90rpx;
  background:linear-gradient(-60deg,rgba(11,40,163,1) 0%,rgba(0,26,136,1) 100%);
  border-radius:45rpx;
  box-shadow:10rpx 0rpx 20rpx rgba(11,40,163,0.2);
  line-height: 90rpx;
  color: #fff;
  text-align: center;
  margin: 0 auto;
  margin-top: 58rpx;
}
