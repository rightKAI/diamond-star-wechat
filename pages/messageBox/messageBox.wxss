/* pages/messageBox/messageBox.wxss */
view{
  box-sizing:border-box;
}
.content{
  padding: 0 30rpx;
  padding-bottom: 150rpx;
}
.messageItem{
  height: 140rpx;
  width: 100%;
  border-bottom: 1px solid #e8e8e8;
  overflow: hidden;
  position: relative;
}
.icon image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.icon{
  position: relative;
  margin-top: 30rpx;
  width: 80rpx;
  height: 80rpx;
}
.icon .hasNew{
  display: block;
  content:'';
  width: 20rpx;
  height: 20rpx;
  background: #F52849;
  border-radius: 50%;
  position: absolute;
  top: 0;
  right: 0;
}
.textTip{
  width: 460rpx;
  height: 100%;
  position: absolute;
  left: 150rpx;
  top: 25rpx;
}
.textTip view:nth-child(1){
  font-size: 30rpx;
  color: #333;
}
.textTip view:nth-child(2){
  font-size: 26rpx;
  color: #999;
  overflow: hidden;/*超出部分隐藏*/
  white-space: nowrap;/*不换行*/
  text-overflow:ellipsis;/*超出部分文字以...显示*/
}
.messageTime{
  position: absolute;
  font-size: 22rpx;
  color: #999;
  top: 30rpx;
  right: 30rpx;
}